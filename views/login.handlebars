{{#if success_msg}}
  <div class="alert alert-success">{{success_msg}}</div>
{{/if}}

{{#if error_msg}}
  <div class="alert alert-danger">{{error_msg}}</div>
{{/if}}

{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}
<div class="limiter">
  <div class="container-login100">
		<div class="wrap-login100">
			<form class="login100-form validate-form" method='post' action='/users/login'>
			  
        
			  <input type="hidden" name="_csrf" value={{csrftoken}}>
				<span class="login100-form-title p-b-34">Account Login</span>
				<div class="wrap-input100 rs1-wrap-input100 validate-input m-t-20 m-b-20" data-validate="Type user name">
					<input id="first-name" class="input100" type="text" name="username" placeholder="User name">
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 rs2-wrap-input100 validate-input m-t-20 m-b-20" data-validate="Type password">
					<input class="input100" type="password" name="password" placeholder="Password">
					<span class="focus-input100"></span>
				</div>
				
				<div class="container-login100-form-btn p-t-40 p-b-110">
					<button class="login100-form-btn">
						Sign in
					</button>
				</div>
				
				<div style='margin:20px 0px;background: #fff;display: flex;flex-wrap: wrap;justify-content: center;width: 100%;'>
				  <img style="-webkit-user-select: none;" src="/images/ht_telconet.png">
				</div>
				
				{{!--<div class="w-full text-center">--}}
				{{!--	<a href="/users/register" class="txt3">--}}
				{{!--		Sign Up--}}
				{{!--	</a>--}}
				{{!--</div>--}}
				
      </form>
    
      <div class="login100-more" style="background-image: url('/images/bg-01.jpg');"></div>
	  </div>
  </div>
</div>

